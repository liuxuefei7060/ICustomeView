<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bc_default"
    android:orientation="vertical"
    tools:context=".hencoder.HenCoderCustomViewDrawActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bc_default"
        android:orientation="vertical"
        tools:context=".hencoder.HenCoderCustomViewDrawActivity">

        <com.viewhigh.example.icustomeview.ui.DrawText
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/white" />

        <com.viewhigh.example.icustomeview.ui.DrawBitmap
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/white" />

        <com.viewhigh.example.icustomeview.ui.DrawPath
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/white" />


        <com.viewhigh.example.icustomeview.ui.DrawPath2
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/white" />

        <com.viewhigh.example.icustomeview.ui.DrawCircle
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@color/white" />


        <com.viewhigh.example.icustomeview.ui.DrawReact
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@color/white" />

        <com.viewhigh.example.icustomeview.ui.DrawRoundReact
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@color/white" />


        <com.viewhigh.example.icustomeview.ui.DrawOval
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@color/white" />


        <com.viewhigh.example.icustomeview.ui.DrawLine
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@color/white" />


        <com.viewhigh.example.icustomeview.ui.DrawArc
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@color/white" />


    </LinearLayout>
</ScrollView>